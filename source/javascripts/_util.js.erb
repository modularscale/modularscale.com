// Normalizes values to a specific range
// like reset to a value between 0 and 360
function modulo(n,m) {
  return Math.round(((n/m)-Math.floor(n/m))*m);
}

// Splits a string with a number and unit
// into a number and unit
function splitUnit(n) {
  n = n.match(/^(\d+(?:\.\d+)?)(.*)$/);
  return [n[1]/1,n[2]];
}

