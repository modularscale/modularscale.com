<section class="form">
  <div class="calculator-selection tabs">
    <a href="#web" class="calculator-lang tab active">Web</a>
    <a href="#sass" class="calculator-lang tab">Sass</a>
    <a href="#js" class="calculator-lang tab">JS</a>
  </div>
  <form id="form">
    <div class="bases">
      <h6 class="label">Bases</h6>
      <label for="base"><input type="text" value="1em" step="1" id="msBase" onkeyup="changeBase(this)"></label>
      <button for="base" class="button-pm add">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </button>
    </div>
    <h6 class="label">Ratios</h6>
    <div class="ratios">
      <label for="ratio"><input type="number" value="1.3" step="0.05" id="msRatio" onkeyup="changeRatio(this)"></label>
      <button for="ratio" class="button-pm add">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </button>
      <label for="ratio"><input type="number" value="1.3" step="0.05" id="msRatio" onkeyup="changeRatio(this)"></label>
      <button for="ratio" class="button-pm add">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </button>
      <button for="ratio" class="button-pm remove">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </button>
    </div>
  </form>

  <h6 class="label code">Sass settings</h6>

<pre><code id="ms-settings">msBase: 1em;
msRatio: 1.3;</code></pre>

  <a href="https://github.com/Team-Sass/modular-scale" class="code-install">Install the Sass plugin</a>

